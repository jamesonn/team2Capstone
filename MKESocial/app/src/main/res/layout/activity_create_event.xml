<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Title: "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <EditText
                android:id="@+id/edit_title"
                style="@style/linearLayoutItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Title"
                android:inputType="textCapWords"
                android:textSize="30sp" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_description"
                style="@style/linearLayoutItems"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Description"
                android:inputType="textMultiLine" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/iconPadding"
                app:srcCompat="@mipmap/ic_start_date" />

            <EditText
                android:id="@+id/edit_start_date"
                style="@style/linearLayoutItems"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="false"
                android:hint="Click to set start date"
                android:inputType="date" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/iconPadding"
                app:srcCompat="@mipmap/ic_end_date" />

            <EditText
                android:id="@+id/edit_end_date"
                style="@style/linearLayoutItems"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="false"
                android:hint="Click to set end date"
                android:inputType="date" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/iconPadding"
                app:srcCompat="@mipmap/ic_start_time" />

            <EditText
                android:id="@+id/edit_start_time"
                style="@style/linearLayoutItems"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="false"
                android:hint="Click to set start time"
                android:inputType="date" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/iconPadding"
                app:srcCompat="@mipmap/ic_end_time" />

            <EditText
                android:id="@+id/edit_end_time"
                style="@style/linearLayoutItems"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="false"
                android:hint="Click to set end time"
                android:inputType="date" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ic_location_on" />

            <fragment
                android:id="@+id/place_autocomplete_fragment"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                style="@style/linearLayoutItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="8dp"
                app:srcCompat="@mipmap/ic_people" />

            <EditText
                android:id="@+id/edit_suggested_age"
                style="@style/linearLayoutItems"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Suggest Age (Optional)"
                android:inputType="numberSigned" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/iconPadding"
                app:srcCompat="@mipmap/ic_money_sign" />

            <EditText
                android:id="@+id/edit_cost"
                style="@style/linearLayoutItems"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Cost (Optional)"
                android:inputType="numberDecimal" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/iconPadding"
                app:srcCompat="@mipmap/ic_tag" />

            <MultiAutoCompleteTextView
                android:id="@+id/edit_tags"
                style="@style/linearLayoutItems"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Tags (first, second, ...)"
                android:inputType="textMultiLine|textCapCharacters" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_create"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:text="Create Event"
                android:textColorLink="@color/mke_light_blue" />
        </GridLayout>

    </LinearLayout>

</ScrollView>