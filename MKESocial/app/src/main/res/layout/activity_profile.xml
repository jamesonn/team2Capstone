<?xml version="1.0" encoding="utf-8"?>
<!--Sample Profile Layout-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"> <!--add scrolling so that users can scroll if needed-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <!--Layout for profile page-->
    <ImageView
        android:id="@+id/profile_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/profile_pic"
        android:scaleType="centerCrop"
        android:background="@color/mke_dark_blue" /> <!--Profile Picture-->
    <TextView
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="140dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:textStyle="bold" /> <!--Profile Name-->
                                    <!--user's first name is stored in first_name -->

    <!--NOTE: the items below are optional on a profile. Users can choose to not show them-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/about_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/about_me"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" /> <!--Section Title: About Me-->

        <TextView
            android:id="@+id/about_me_bio"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text=""
            android:maxLength="1000"
            android:textAlignment="center" /> <!--biography-->

        <TextView
            android:id="@+id/contact_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/contact_information"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" /> <!--Section Title: Contact Information-->

        <TextView
            android:id="@+id/email_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=""
            android:textAlignment="center" /> <!--email address-->

        <TextView
            android:id="@+id/shared_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/events_i_am_attending"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" /> <!--Section Title: Events I am Attending-->

        <!--List of Event Names-->
        <LinearLayout
            android:id="@+id/for_att_events"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/shared_events"
            android:orientation="vertical">

            <!--list of events attending goes here-->
            <!--these events should be clickable-->
        </LinearLayout>
