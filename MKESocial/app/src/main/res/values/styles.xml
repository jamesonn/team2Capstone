<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--

        Might have to talk about this on Sunday


        <item name="colorPrimary">@color/mke_dark_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/mke_yellow</item>
        <item name="android:statusBarColor">@color/mke_dark_blue</item>

        -->
    </style>


    <style name="linearLayoutItems">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColorLink">@color/mke_yellow</item>
       <!--<item name="android:textAlignment"></item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="uneditableEditText">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColorLink">@color/mke_yellow</item>
        <!--<item name="android:textAlignment"></item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">none</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="iconPadding">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppTheme.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="MKELightTheme" parent="Theme.AppTheme.Light.NoActionBar" >
        <item name="colorAccent">@color/mke_light_blue</item>
        <item name="android:colorForeground">@android:color/holo_orange_light</item>
        <item name="android:navigationBarColor">@android:color/holo_blue_light</item>
        <item name="android:textColorPrimary">#0091EA</item>
    </style>

    <style name="MKEDarkTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorAccent">#FF06101D</item>
        <item name="android:colorForeground">#FF6D00</item>
        <item name="android:textColorPrimaryInverse">@color/mke_white_about_back</item>
    </style>

    <style name="DarkCalendar" parent="MKEDarkTheme">
        <item name="android:textColor">#FF6D00</item>
    </style>

</resources>
