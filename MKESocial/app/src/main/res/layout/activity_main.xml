<?xml version="1.0" encoding="utf-8"?>
<!--NOTE: this is NOT the real main activity layout...
           the REAL layout should be utilizing side menu + login/welcome screen-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team2.mkesocial.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView2" />

    <!--NOTE: The following components were simply for me to be able to test navigating to my assigned pages-->
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="88dp"
        android:background="@color/colorPrimary"
        android:onClick="map_btn_on_click"
        android:text="To Map"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="71dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorAccent"
        android:onClick="profile_btn_on_click"
        android:text="To Profile"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="165dp" />

    <Button
        android:id="@+id/create_event_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@android:color/darker_gray"
        android:onClick="create_event_btn_on_click"
        android:padding="@dimen/fab_margin"
        android:text="@string/create_event_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/setting_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_event_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@android:color/holo_green_light"
        android:onClick="settings_btn_on_click"
        android:padding="@dimen/fab_margin"
        android:text="@string/edit_settings_label"
        app:layout_constraintLeft_toLeftOf="@+id/create_event_button"
        app:layout_constraintTop_toBottomOf="@+id/create_event_button"
        tools:layout_constraintLeft_creator="1" />

    <ImageButton
        android:id="@+id/about_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/mke_white"
        android:onClick="about_btn_on_click"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</RelativeLayout>